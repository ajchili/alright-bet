{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "jsx": "react"
  },
  "include": [
    "src/App.tsx",
    "src/index.tsx",
    "src/components",
    "src/pages"
  ],
  "exclude": [
    "src/api",
    "src/config",
    "src/lib",
    "src/routes",
    "src/server.tsx"
  ]
}